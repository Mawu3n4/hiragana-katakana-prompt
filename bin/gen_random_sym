HK="$HOME/.hiragana-katakana-prompt/"
f=$(cat $HK"files/hk_symbols.txt")

hirataka() {
    random_symbol=$(echo "$f" | shuf -n1)

    symbol=$(echo $random_symbol | cut -d ' ' -f1)
    sound=$(echo $random_symbol | cut -d ' ' -f2)

    (mpg321 -q $HK/sounds/$sound & ) > /dev/null 2>&1
    echo $symbol
}
